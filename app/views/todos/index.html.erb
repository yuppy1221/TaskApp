<h1>Listing todos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Detail</th>
    <th>Status</th>
    <th>Group</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.title %></td>
    <td><%= todo.detail %></td>
    <td><%= todo.status %></td>
    <td><%= todo.group_id %></td>
    <td><%= todo.user_id %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path %>
